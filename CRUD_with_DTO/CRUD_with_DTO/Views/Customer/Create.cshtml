
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<form method="post" class="">
    <input type="text" name="FirstName" placeholder="FirstName" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("FirstName")</span><br />
    <input type="text" name="LastName" placeholder="LastName" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("LastName")</span><br />
    <input type="text" name="Email" placeholder="Email" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("Email")</span><br />
    <input type="text" name="Phone" placeholder="Phone" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("Phone")</span><br />
    <input type="text" name="Address" placeholder="Address" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("Address")</span><br />
    <input type="date" name="DateJoined" placeholder="DateJoined" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("DateJoined")</span><br />
    <input type="submit" value="Create" class="btn btn-primary" />
</form>
