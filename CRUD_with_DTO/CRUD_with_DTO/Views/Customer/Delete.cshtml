
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<table class="table table-bordered">
    <tr>
        <th>Customer ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Address</th>
        <th>Join Date</th>
    </tr>
    <tr>
        <td>@Model.CustomerId</td>
        <td>@Model.FirstName</td>
        <td>@Model.LastName</td>
        <td>@Model.Email</td>
        <td>@Model.Phone</td>
        <td>@Model.Address</td>
        <td>@Model.DateJoined</td>
    </tr>
</table>
<span>
    Are you sure you want to delete @Model.FirstName?
</span>
<form method="post">
    <input type="hidden" name="CustomerId" value="@Model.CustomerId" />
    <input type="submit" value="Yes" name="del" class="btn btn-danger" />
    <input type="submit" value="No" name="del" class="btn btn-danger" />
</form>