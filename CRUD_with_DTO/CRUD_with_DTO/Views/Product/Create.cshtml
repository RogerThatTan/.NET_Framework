
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<form method="post" class="">
    <input type="text" name="Name" placeholder="Name" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("Name")</span><br />
    <input type="text" name="Description" placeholder="Description" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("Description")</span><br />
    <input type="text" name="Price" placeholder="Price" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("Price")</span><br />
    <input type="text" name="Category" placeholder="Category" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("Category")</span><br />
    <input type="text" name="StockQuantity" placeholder="Stock Quantity" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("StockQuantity")</span><br />
    <input type="submit" value="Create" class="btn btn-primary" />
</form>
