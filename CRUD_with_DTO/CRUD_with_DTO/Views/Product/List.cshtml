
@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<table class="table table-bordered">

    <tr>
        <th>Product ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Category</th>
        <th>Stock</th>
        <th>Actions</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td>@item.Category</td>
            <td>@item.StockQuantity</td>
            <td>
                <a href="/product/edit/@item.ProductId" class="btn btn-primary">Edit</a> 
                <a href="/product/details/@item.ProductId" class="btn btn-primary">Details</a> 
                <a href="/product/delete/@item.ProductId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }

</table>
       <h4>To create new product</h4>
       <a href="/product/create" class="btn btn-primary">Create</a>