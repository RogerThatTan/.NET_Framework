


@{
    ViewBag.Title = "CreateProgram";
}

<h2 class="text-center">Create Program</h2>

<form method="post">
    <input type="text" name="ProgramName" value="@Model.ProgramName" placeholder="Program Name" class="form-control" />
    <p class="text-danger">@Html.ValidationMessage("ProgramName")</p>
    <input type="text" name="AirTime" value="@Model.AirTime" placeholder="Air Time (HH:mm:ss)" class="form-control" />
    <p class="text-danger">@Html.ValidationMessage("AirTime")</p>
    <input type="text" inputmode="decimal" name="TRPScore" value="@Model.TRPScore" placeholder="0.0 to 10.0" class="form-control" />
    <p class="text-danger">@Html.ValidationMessage("TRPScore")</p>
    <select class="form-control" name="ChannelId">
        <option selected disabled>Channel Name</option>
        @foreach (var item in ViewBag.channels)
        {
            <option value="@item.ChannelId" @(item.ChannelId == Model.ChannelId ? "selected" : "")>
                @item.ChannelName
            </option>
        }
    </select>
    <p class="text-danger">@Html.ValidationMessage("ChannelId")</p>
    <input type="submit" value="Create" class="btn btn-success" />
    <a href="/program/programlist" class="btn btn-warning">Back</a>
</form>